<PARAMS>
    <!--
        CASE1: setup and clean test env
        CASE2: ONOS Recovery Test
        <testcases>1,2</testcases>
   -->
    <testcases>1,2</testcases>

    <repeat>1</repeat>
    <Rally>
        <adminOpenrc>source admin-openrc.sh</adminOpenrc>
        <deploymentCreate>rally deployment create --fromenv --name sona-test</deploymentCreate>
        <createVerifier>rally verify create-verifier --type tempest --name tempest-verifier --source https://github.com/sonaproject/tempest</createVerifier>
        <configureVerifier>rally verify configure-verifier --reconfigure --extend sona-tempest.conf</configureVerifier>
        <basicTest>rally verify start --pattern TestNetworkBasicOps --skip-list sona-skip-list.yaml --detail</basicTest>
        <networkTest>rally verify start --pattern network --skip-list sona-skip-list.yaml --detail</networkTest>
    </Rally>
    <ENV>
        <cellName>SONA</cellName>
        <appString>drivers,openflow-base,openstacknetworking</appString>
    </ENV>
    <tcpdump> False </tcpdump>
    <apps>
        org.onosproject.openstacknode,org.onosproject.ovsdb-base,org.onosproject.openstacknetworking
    </apps>
    <networkCfg>
        <path>/home/sdn/network-cfg.json.kuryr</path>
    </networkCfg>
</PARAMS>
